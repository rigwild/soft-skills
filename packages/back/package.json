{
  "name": "@soft-skills/back",
  "version": "0.1.0",
  "private": true,
  "repository": "rigwild/soft-skills",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc && cp src/scripts/audio_analysis.py dist/scripts/audio_analysis.py",
    "dev": "nodemon",
    "start:dev": "ts-node src/index.ts",
    "lint": "eslint --ext .ts ./src ./test --fix",
    "lint:no-fix": "eslint --ext .ts ./src ./test",
    "test": "mkdir -p test/uploads && ava && rm -rf test/uploads",
    "doc": "apidoc -i src -o apidoc-out && apidoc-markdown -p apidoc-out -o DOCUMENTATION.md && rm -rf apidoc-out"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "execa": "^4.0.1",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.7-alpha.3",
    "express-validator": "^6.4.1",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.14",
    "morgan": "^1.10.0",
    "nanoid": "^3.1.9",
    "threads": "^1.4.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/dotenv-safe": "^8.1.0",
    "@types/express": "^4.17.6",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.19",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "apidoc": "^0.22.1",
    "apidoc-markdown": "^5.1.0",
    "ava": "^3.8.1",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "mongodb-memory-server": "^6.6.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "latest"
    }
  },
  "ava": {
    "verbose": true,
    "timeout": "300000",
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "./src"
    ],
    "exec": "npm run start:dev",
    "ext": "ts"
  }
}
